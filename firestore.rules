rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Auth check function
    function isAuthenticated() {
      return request.auth != null;
    }

    // Owner check function
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admin check placeholder (can be expanded)
    function isAdmin() {
       return false; // Replace with actual admin logic or claim check
    }

    // Users collection: Users can read/write their own profiles
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }

    // Roadmaps collection: Public read, admin write
    match /roadmaps/{roadmapId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Only admins/server can create roadmaps
    }

    // Resources collection: Public read, admin write
    match /resources/{resourceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
